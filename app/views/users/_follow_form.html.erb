<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.active_friendships.find_by(following_id: @user.id), method: :delete, local: true) do |f| %>
    <%= f.submit t '.unfollow' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_friendships.build, local: true) do |f| %>
      <%= hidden_field_tag :following_id, @user.id %>
    <%= f.submit t '.follow' %>
    <% end %>
  <% end %>
<% end %>
