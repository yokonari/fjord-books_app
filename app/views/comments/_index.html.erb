<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
      <th>Posting time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= @user.email %></td>
        <td><%= l comment.created_at, format: :long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
