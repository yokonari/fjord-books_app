<% if comments.empty? %>
  <%= t('.notice') %>
<% else %>
  <% comments.each do |comment| %>
    <hr>
    <p>
      <strong><%= Comment.human_attribute_name(:user) %>:</strong>
      <% if comment.user.name.empty? %>
        <%= link_to comment.user.email, comment.user %>
      <% else %>
        <%= link_to comment.user.name, comment.user %>
      <% end %>
    </p>

    <p>
      <strong><%= Comment.human_attribute_name(:comment) %>:</strong>
      <%= comment.content %>
    </p>

    <p>
      <strong><%= Comment.human_attribute_name(:posting_time) %>:</strong>
      <%= l comment.created_at, format: :long %>
    </p>
  <% end %>
<% end %>
