<h1>Report</h1>
<p>
  <strong>User:</strong>
  <%= link_to @user.name, @user %>
  <%= link_to @user.email, @user if @user.name.empty? %>
</p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <strong>Posting time:</strong>
  <%= l @report.created_at, format: :long %>
</p>

<% if current_user == @user %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
  <%= link_to 'Destroy', @report, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', reports_path %>
<p>
<%= render 'comments/new', commentable: @report %>
<%= render 'comments/index', comments: @comments, commentable: @report %>
</p>

